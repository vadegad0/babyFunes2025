---
import { format } from 'date-fns';
import { es } from 'date-fns/locale';

// Sample data - replace with actual data
const tournamentStartDate = new Date('2025-04-08');
const latestResults = [
  {
    date: new Date('2025-04-08'),
    matches: [
      { teamA: "CD Juventud", scoreA: 3, teamB: "Estrellas FC", scoreB: 1 },
      { teamA: "Real Ipiales", scoreA: 2, teamB: "D. Pasto Junior", scoreB: 2 }
    ]
  },
  {
    date: new Date('2025-04-09'),
    matches: [
      { teamA: "Los Andes", scoreA: 1, teamB: "Atlético Nariño", scoreB: 0 },
      { teamA: "Millos FC", scoreA: 4, teamB: "CD Tumaco", scoreB: 2 }
    ]
  }
];

function formatDate(date) {
  return format(date, "EEEE d 'de' MMMM", { locale: es });
}
---

<section class="py-16 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900">Últimos Resultados</h2>
      <div class="mt-2 h-1 w-20 bg-secondary-500 mx-auto"></div>
      <p class="mt-4 text-lg text-gray-600 max-w-3xl mx-auto">
        Mantente al día con los resultados más recientes del torneo.
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {latestResults.map(day => (
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <div class="bg-secondary-600 text-white py-3 px-4">
            <h3 class="text-xl font-bold capitalize">{formatDate(day.date)}</h3>
          </div>
          <div class="divide-y divide-gray-100">
            {day.matches.map(match => (
              <div class="p-4">
                <div class="flex items-center justify-between">
                  <div class="flex items-center w-2/5">
                    <span class="text-gray-800 font-semibold text-right w-full">{match.teamA}</span>
                  </div>
                  <div class="flex items-center justify-center w-1/5">
                    <div class="px-3 py-1 bg-gray-100 rounded-lg flex justify-center items-center min-w-16">
                      <span class="font-bold text-lg text-gray-800">{match.scoreA}</span>
                      <span class="mx-1 text-gray-500">-</span>
                      <span class="font-bold text-lg text-gray-800">{match.scoreB}</span>
                    </div>
                  </div>
                  <div class="flex items-center w-2/5">
                    <span class="text-gray-800 font-semibold text-left w-full">{match.teamB}</span>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
    
    <div class="mt-12 text-center">
      <a href="/resultados" class="inline-block bg-secondary-600 hover:bg-secondary-700 text-white font-bold py-3 px-6 rounded-lg transition-colors duration-300">
        Ver todos los resultados
      </a>
    </div>
  </div>
</section>