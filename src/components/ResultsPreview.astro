<section class="py-16 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900">Últimos Resultados</h2>
      <div class="mt-2 h-1 w-20 bg-secondary-500 mx-auto"></div>
      <p class="mt-4 text-lg text-gray-600 max-w-3xl mx-auto">
        Mantente al día con los resultados más recientes del torneo.
      </p>
    </div>

    <!-- Contenedor flex para las tarjetas -->
    <div class="flex flex-col lg:flex-row lg:justify-center gap-8">
      
      <!-- Tarjeta 1 -->
      <div class="bg-white rounded-xl shadow-md overflow-hidden flex-1">
        <div class="bg-secondary-600 text-white py-3 px-4">
          <h3 class="text-xl font-bold capitalize">Tercer y Cuarto Puesto</h3>
        </div>
        <div class="p-4">
          <div class="flex items-center justify-between gap-4 text-center sm:text-left">
            <div class="w-1/3 text-right">
              <span class="text-gray-800 font-semibold block">Deportivo Pasto</span>
            </div>
            <div class="w-1/3 flex justify-center">
              <div class="bg-gray-100 px-4 py-2 rounded-lg text-lg font-bold text-gray-800 min-w-[88px] text-center">
                <span>(3) 0</span>
                <span class="text-gray-500 mx-1">-</span>
                <span>(2) 0</span>
              </div>
            </div>
            <div class="w-1/3 text-left">
              <span class="text-gray-800 font-semibold block">Real Madrid Tumaco</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Tarjeta 2 -->
      <div class="bg-white rounded-xl shadow-md overflow-hidden flex-1">
        <div class="bg-secondary-600 text-white py-3 px-4">
          <h3 class="text-xl font-bold capitalize">Primer y Segundo Puesto</h3>
        </div>
        <div class="p-4">
          <div class="flex items-center justify-between gap-4 text-center sm:text-left">
            <div class="w-1/3 text-right">
              <span class="text-gray-800 font-semibold block">Eder Ruales</span>
            </div>
            <div class="w-1/3 flex justify-center">
              <div class="bg-gray-100 px-4 py-2 rounded-lg text-lg font-bold text-gray-800 min-w-[88px] text-center">
                <span>3</span>
                <span class="text-gray-500 mx-1">-</span>
                <span>2</span>
              </div>
            </div>
            <div class="w-1/3 text-left">
              <span class="text-gray-800 font-semibold block">Estudiantes Pasto</span>
            </div>
          </div>
        </div>
      </div>

    </div>

    <!-- Botón -->
    <div class="mt-12 text-center">
      <a href="/resultados" class="inline-block bg-secondary-600 hover:bg-secondary-700 text-white font-bold py-3 px-6 rounded-lg transition-colors duration-300">
        Ver todos los resultados
      </a>
    </div>
  </div>
</section>
