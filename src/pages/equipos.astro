      <h1 class="text-4xl font-bold text-center">Equipos Participantes</h1>
      <div class="mt-2 h-1 w-20 bg-white mx-auto"></div>
      <p class="mt-4 text-lg text-center max-w-3xl mx-auto">
        Conoce los 16 equipos que participarán en el torneo Zonal Regional BABY FÚTBOL FUNES 2025.
      </p>
    </div>
  </div>
  
  <TeamGroups />
  
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 text-center mb-12">Información Detallada de los Equipos</h2>
      
      {groups.map(group => (
        <div class="mb-16 last:mb-0">
          <h3 class="text-2xl font-bold text-primary-700 mb-6 pb-2 border-b border-primary-200">{group.name}</h3>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {group.teams.map(team => (
              <div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-200 transition-transform duration-300 hover:shadow-lg">
                <div class="bg-gray-50 p-4 flex justify-center">
                  <img src={team.logo} alt={`Logo de ${team.name}`} class="h-32 w-32 object-contain" />
                </div>
                <div class="p-4">
                  <h4 class="font-bold text-xl text-gray-900 mb-2">{team.name}</h4>
                  <ul class="space-y-2 text-gray-700">
                    <li class="flex items-center">
                      <span class="font-semibold mr-2">Ciudad:</span> {team.city}
                    </li>
                    <li class="flex items-center">
                      <span class="font-semibold mr-2">Entrenador:</span> {team.coach}
                    </li>
                    <li class="flex items-center">
                      <span class="font-semibold mr-2">Colores:</span> {team.colors}
                    </li>
                  </ul>
                </div>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
  </section>
</Layout>